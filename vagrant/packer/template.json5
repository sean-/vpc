{
	variables: {
		name: "FreeBSD-12.0-CURRENT",
		hostname: "freebsd",

		cpus: "1",
		memory: "512",
		root_volume_size: "16384",

		iso_url: "{{ env `ISO_URL` }}",
		iso_md5: "{{ env `ISO_MD5` }}",
	},
	builders: [{
		type: "vmware-iso",
		name: "{{ user `name` }}-VMWare",

		iso_url: "{{ user `iso_url` }}",
		iso_checksum: "{{ user `iso_md5` }}",
		iso_checksum_type: "md5",

		disk_size: "{{ user `root_volume_size` }}",
		
		guest_os_type: "freebsd-64",
		shutdown_command: "poweroff; poweroff",
		headless: false,

		version: "12",
		vm_name: "{{ user `name` }}",
		vmdk_name: "{{ user `name` }}_Root",
		vmx_data: {
			"memsize": "{{ user `memory` }}",
			"numvcpus": "{{ user `cpus` }}",
			"mce.enable": "TRUE",
			"vhu.enable": "TRUE",
			"vhv.enable": "TRUE",
			"vpmc.enable": "TRUE",
			"tools.syncTime": "FALSE",
			"ethernet0.virtualDev": "vmxnet3",
			"ethernet0.pciSlotNumber": "32",
		},

		communicator: "ssh",
		ssh_username: "root",
		ssh_password: "vagrant",
		ssh_pty: "true",
		ssh_wait_timeout: "30s",

		boot_wait: "45s",
		boot_command: [
			// Welcome.  Install.
			"I<wait>",

			// Keymap Selection
			"<enter><wait>",

			// Set Hostname
			"{{user `hostname`}}",
			"<enter><wait>",

			// Distribution Select
			"k<wait><spacebar>", // Disable kernel-dbg
			"l<wait>l<wait><spacebar>", // Disable lib32
			// Current builds don't have the ports tree
			//"p<wait><spacebar>", // Disable ports tree
			"<enter>",

			// Partitioning
			"<down><down><down>", // Highlight "Auto (ZFS)"
			"<enter><wait>",

			// ZFS Configuration
			"<enter><wait>", // Select Install

			// ZFS Configuration
			"<enter><wait>", // Select `stripe`

			// ZFS Configuration
			"<spacebar><enter>", // Toggle `da0`

			// ZFS Configuration
			"<left>", // Highlight "Yes" to destroy data device
			"<enter>", // Activate "Yes"

			// Wait for the installation to complete. 
			"<wait10><wait10><wait10><wait10><wait10>",
			"<wait10><wait10><wait10><wait10><wait10>",
			"<wait10><wait10><wait10><wait10><wait10>",
			"<wait10><wait10><wait10><wait10><wait10>",

			// Password
			"vagrant<enter><wait>", // Enter password for the root account
			"vagrant<enter><wait>", // Re-enter the password for the root account

			// Network Configuration
			"<enter><wait>", // Select `em0`

			// Network Configuration
			"<enter><wait>", // Enable IPv4 configuration
			"<enter>", // Select DHCP
			"<wait10><wait10><wait10>", // Wait to acquire a DHCP address
			"N<wait>", // Enable IPv6 configuration
			"<enter><wait>", // Accept DNS settings from DHCP

			// Time Zone Selector
			"a", // Select UTC
			"<enter><enter><wait>", // Confirm time zone selection

			// Time & Date
			"<enter><wait>", // Skip Date
			"<enter><wait>", // Skip Time

			// System Configuration
			"<enter><wait>", // Accept defaults (only ssh, dumpdev)

			// System Hardening
			"5<spacebar><wait>", // Randomize PD
			"6<spacebar><wait>", // Clean /tmp
			"7<spacebar><wait>", // Disable syslogd network socket
			"8<spacebar><wait>", // Disable sendmail service
			"9<spacebar><wait>", // Enable console password prompt
			"<enter><wait>", // Accept hardening choices

			// Add User Accounts
			"Y<wait>",

			// Create vagrant user
			"vagrant", // Username
			"<enter><wait>",
			"Vagrant User", // Full Name
			"<enter><wait>",
			"<enter><wait>", // UID
			"<enter><wait>", // Login Group
			"wheel", // Auxiliary Group
			"<enter><wait>",
			"<enter><wait>", // Login Class
			"<enter><wait>", // Accept sh as login shell
			"<enter><wait>", // Home Directory
			"<enter><wait>", // Home Directory mode
			"Y", // Use password based authentication
			"<enter><wait>",
			"N", // Use empty password
			"<enter><wait>",
			"N", // Use random password
			"<enter><wait>",
			"vagrant", // Enter password
			"<enter><wait>",
			"vagrant", // Re-enter password
			"<enter><wait>",
			"N", // Lock account after create
			"<enter><wait>",
			"Y", // Look reasonable
			"<enter><wait>",
			"N", // Add another user
			"<enter><wait>",

			// System configuration
			"<enter>", // Select Exit
			"<wait10><wait10><wait10>", // Wait for disk to flush
			"<wait10><wait10><wait10>", 
			"<wait10><wait10><wait10>",

			// Manual Configuration
			"Y<enter><wait>", // Highlight Yes

			// Shell prompt
			"sed -i -e 's/^#PermitRootLogin no/PermitRootLogin yes/' /etc/ssh/sshd_config<enter><wait>",
			"echo 'autoboot_delay=\"-1\"' >> /boot/loader.conf<enter><wait>",
			"chsh -s sh root<enter><wait>",
			"rm -f /etc/devd/devmatch.conf<enter><wait>",
			"touch /etc/devd/devmatch.conf<enter><wait>",
			"exit<enter><wait>",

			// Complete
			"R", // Select Reboot
			"<wait10><wait10><wait10><wait10><wait10>", // Wait for disk to flush
		],
	}],
	provisioners: [
		{
			type: "shell",
			scripts: [
				"scripts/zfs-setup.sh",
				"scripts/configure-machine.sh",
			],
		}
	],
	"post-processors": [{
		type: "vagrant",
		vagrantfile_template: "./Vagrantfile_template",
		output: "../boxes/{{.BuildName}}.box",
		compression_level: 9,
	}]
}
